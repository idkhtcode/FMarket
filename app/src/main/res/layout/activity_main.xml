<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:text="首页"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="340dp"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_title"
        android:textColor="@color/colorBlack"
        android:gravity="center_horizontal"
        android:textStyle="italic" />


    <EditText
        android:id="@+id/et_search"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="25dp"
        android:layout_marginRight="500dp"
        android:drawablePadding="8dp"
        android:hint="搜索"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/colorBlue"
        android:textSize="25sp" />


    <Button
        android:id="@+id/button2"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="80dp"
        android:text="搜索" />

    <ListView
        android:id="@+id/lv_all_commodity"
        android:layout_width="401dp"
        android:layout_height="562dp"
        android:layout_above="@+id/view2"
        android:layout_below="@+id/et_search"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="27dp" />

    <View android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/view2"
        android:background="@color/colorBlack"
        android:layout_marginTop="70dp"/>
    <ImageButton
        android:id="@+id/ib_home_page"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_home_page"
        android:src="@drawable/home_page"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"/>
    <View android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="130dp"
        android:background="@color/colorBlack"/>
    <ImageButton
        android:id="@+id/ib_add_product"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_add_product"
        android:src="@drawable/add"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"/>
    <View android:id="@+id/view3"
        android:layout_above="@+id/view4"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@color/colorBlack"
        android:layout_marginStart="270dp"/>
    <ImageButton
        android:id="@+id/ib_personal_center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_personal_center"
        android:src="@drawable/information"
        android:layout_marginStart="320dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_home_page"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:text="首页"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_add_product"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="发布闲置"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="165dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_personal_center"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="个人中心"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginStart="305dp"
        android:layout_marginBottom="5dp"/>
    <View android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>